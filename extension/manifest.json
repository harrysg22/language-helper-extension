{
  "name": "Language Helper (Learning)",
  "description": "Step-by-step extension for subtitles learning.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": { "default_title": "Language Helper" },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube-nocookie.com/*",
    "https://hitv.vip/*",
    "https://www.hitv.vip/*",
    "https://home.hitv.vip/*",
    "https://s.hitv.vip/*",
    "https://api.mymemory.translated.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.youtube-nocookie.com/*"
      ],
      "js": ["ui/pinyin-pro.js", "content.js"],
      "css": ["ui/overlay.css"]
    },
    {
      "matches": [
        "https://hitv.vip/*",
        "https://www.hitv.vip/*",
        "https://home.hitv.vip/*",
        "https://s.hitv.vip/*"
      ],
      "js": ["ui/pinyin-pro.js", "content.js"],
      "css": ["ui/overlay.css"],
      "all_frames": true
    }
  ]
}
